<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Mangas</title>
</head>
<body>
    <h1>All Mangas</h1>
    <table id="list">
    <thead>
        <tr>
            <th>Title</th>
            <th>Chapter</th>
        </tr>
    </thead>
    <tbody>
    <% mangas.forEach(function(m) { %>
        <tr>
            <td><%= m.title %></td>
            <td><a href="/movies/<%= m._id %>">Details</a></td>
        </tr>
    <% }) %>
    </tbody>
    </table>
</body>
</html>