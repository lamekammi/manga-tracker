<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Mangas</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <nav>
        <% if (user) { %> 
            <a href="/mangas">All Mangas</a>
            <a href="/mangas/new">Add Manga</a>
            <a href="/publishers/new">Publishers</a>
            <a href="/logout">LOG OUT</a>
            <% } else {%>
            <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a>
            <% } %>
    </nav>
    <h1>All Mangas</h1>
    <table id="list">
    <thead>
        <tr>
            <th>Title</th>
            <th>Chapter</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    <% mangas.forEach(function(m) { %>
        <tr>
            <td><%= m.title %></td>
            <td><a href="/mangas/<%= m._id %>">Details</a></td>
            <td><form action="/mangas/<%= m._id %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">X</button>
              </form></td>
        </tr>
    <% }) %>
    </tbody>
    </table>
</body>
</html>