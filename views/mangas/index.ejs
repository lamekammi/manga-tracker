<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Mangas</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
<header>
    <div class="container">
        <img src="https://i.imgur.com/as5zeHZ.png?2" alt="logo" class="logo">
    <nav>
        <% if (user) { %> 
            <a href="/mangas">All Mangas</a>
            <a href="/mangas/new">Add Manga</a>
            <a href="/publishers/new">Publishers</a>
            <a href="/logout" class="logout">LOG OUT</a>
            <% } else {%>
            <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a>
            <% } %>
    </nav>
</div>
</header>
<br>
<div class="main-text">
    <img src="https://i.imgur.com/5LDdyDR.png?1" alt="all-mangas" class="h1-text">
    <table id="list">
    <hr>
    <tbody>
    <% mangas.forEach(function(m) { %>
        <tr>
            <td class="user._id"></td>
            <td><%= m.title %></td>
            <td><a href="/mangas/<%= m._id %>" class="details">Details</a></td>
            <td><form action="/mangas/<%= m._id %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">delete</button>
              </form></td>
        </tr>
    <% }) %>
    </tbody>
    </table>
    </div>
</body>
</html>